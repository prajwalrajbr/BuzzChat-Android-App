<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="25dp">

    <RelativeLayout
        android:id="@+id/cardViewFriendsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/FriendImage"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_profile_pic"
            />

        <LinearLayout
            android:id="@+id/FriendDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/FriendImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/FriendUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Username"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/messageFriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_message_24"/>

                <ImageButton
                    android:id="@+id/audioCallFriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/ic_baseline_call_24"/>

                <ImageButton
                    android:id="@+id/videoCallFriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_video_call_24"/>


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>